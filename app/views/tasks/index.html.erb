
<div class = "container">
  <h1>My Tasks</h1>
  <% @tasks.each do |task| %>
  <div class="flex">
    <%= link_to task.title, task %>
    <%= link_to task_path(task), data: {turbo_method: :delete,  turbo_confirm: "Are you sure?"} do %>
      <i class="fa-solid fa-trash"></i>
     <% end %>
     </div>
  <% end %>
</div>
